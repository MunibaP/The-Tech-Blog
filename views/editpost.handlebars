<main class="container mt-5">
    <h1 class="mb-4">Edit Post</h1>
    <form class="update-blog-post-form" class="mb-3">
        <div class="mb-3">
            <label for="title-update-blog-post" class="form-label">Title</label>
            <input type="text" class="form-control" id="title-update-blog-post" placeholder="Enter the title for your post" value="{{title}}"/>
        </div>
        <!-- Content Section-->
        <div class="mb-3">
            <label for="content-update-blog-post" class="form-label">Content</label>
            <textarea class="form-control" id="content-update-blog-post" rows="3" placeholder="Enter the title for your post">{{content}}</textarea>
        </div>

        <!-- Button for update post-->
        <button type="submit" id="update-blog-post" class="btn btn-primary">Update Post</button>

        <!-- Button for delete post-->
        <button type="submit" id="delete-blog-post" class="btn btn-danger">Delete Post</button>
   
    </form>
</main>